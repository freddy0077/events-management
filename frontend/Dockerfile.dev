# Development Dockerfile for Next.js frontend
FROM node:18-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache curl libc6-compat

# Enable corepack and install pnpm
RUN corepack enable
RUN corepack prepare pnpm@latest --activate

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Install dependencies with verbose logging
RUN pnpm install --shamefully-hoist

# Copy environment configuration first
COPY .env* ./

# Copy source code
COPY . .

# Create node_modules/.bin symlinks and verify installation
RUN ls -la node_modules/.bin/ || echo "No .bin directory found"
RUN which pnpm && pnpm --version
RUN pnpm list next || echo "Next.js not found in dependencies"

# Expose port
EXPOSE 3000

# Use npx to ensure Next.js is found, or fallback to direct pnpm
CMD ["pnpm", "run", "dev"]
